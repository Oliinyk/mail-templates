<td style="max-width: 190px; vertical-align: top;">
    <div
        style="background-image: url('{{this.main_image_url}}');     background-size: cover; vertical-align: top; border-top-left-radius: 12px; border-top-right-radius: 12px; padding: 10px 12px; height: 105px; width: 166px;">
        <p
            class = "text-dark"
            style="display: inline-block; background-color: #FFF; font-size: 12px; font-weight: 680; line-height: 1.2; border-radius: 4px; padding: 4px 8px; margin: 0;">
            <img src='https://public-lnf.s3.us-west-1.amazonaws.com/v2-emails/img/sneaker-icon.png' alt="sneaker"
                style="display: inline-block; vertical-align: middle;" />
            <span>{{this.walking_distance_mins}}-min walk</span>
        </p>
    </div>
    <div
        style="vertical-align: top; text-align: left; padding: 10px; background-color: #FFFFFF; border-bottom-left-radius: 12px; border-bottom-right-radius: 12px; border-top: 2px solid #0A0083; width: 170px;">
        <div style="padding-bottom: 6px; line-height: 1;">
            <p
                class = "text-dark"
                style="width: 50%; display: inline-block; font-size: 10px; font-weight: 500; letter-spacing: -0.28px; line-height: 1.8; margin: 0;">
                {{#if this.is_for_sale}}
                <span
                    style="display: inline-block; width: 10px; height: 10px; border-radius: 50%; background-color: #CB0000;"></span>
                {{else}}
                <span
                    style="display: inline-block; width: 10px; height: 10px; border-radius: 50%; background-color: #8A44FF;"></span>
                {{/if}}
                <span style="padding-left: 3px;">{{this.listing_type_formatted}}</span>
            </p>
            {{#if this.new_flag}}
            <p
                style="width: 45%; display: inline-block; margin: 0 0 0 auto; text-align: right; color: #00CA99; font-size: 10px; font-weight: 700; letter-spacing: -0.2px; line-height: 1;">
                NEW LISTING</p>
            {{/if}}
        </div>
        <p class="text-dark"
            style="font-size: 12px; font-weight: 700; line-height: 1.2; letter-spacing: -0.24px; margin: 0; padding-bottom: 10px;">
            {{this.formatted_price}}
        </p>
        <p class="text-dark"
            style="font-size: 12px; font-weight: 500; line-height: 1.2; letter-spacing: -0.24px; margin: 0;">
            {{this.home_info}}
        </p>
    </div>
</td>